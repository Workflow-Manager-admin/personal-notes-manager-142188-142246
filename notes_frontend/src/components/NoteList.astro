---
const { notes, onSelect, selectedNoteId } = Astro.props;
---
<ul>
  {notes.map((note) => (
    <li
      class={selectedNoteId === note.id ? 'selected' : ''}
      onClick={() => onSelect(note.id)}
    >
      {note.title}
    </li>
  ))}
</ul>
<style>
ul { list-style: none; margin: 0; padding: 0;}
li { padding: 8px 14px; cursor: pointer;}
li.selected,
li:hover { background: #f5f5f5;}
</style>
